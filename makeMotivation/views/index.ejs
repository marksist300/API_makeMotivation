<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&family=Raleway:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Make Motivation</title>
</head>
<body>
    <section class="heading-section">
        <h1>Make Motivation</h1>
        <form action="/motivate" method="POST">
            <div class="search-bar">
                <input type="text" placeholder="Enter quote here" name="quoteBox" required 
                oninvalid="this.setCustomValidity('Please Enter a Quote First')"
                oninput="this.setCustomValidity('')"/>
                <button class="submit-btn" type="submit"><i class="fa fa-paper-plane"></i></button>
            </div>
        </form>
    </section>
    <section class="quote-section">
        <h2>Words of Motivation</h2>
        <ul class="quote-list">
            <% for(let i= 0; i<quotes.length; i++) {%>
                <li class="quote">
                    <q class="quote-item" id="quote-<%=i%>"><%= quotes[i].quoteBox %></q>
                    <div class="quote-buttons">
                        <button id="random-quote-update<%=i%>" class="update-quote btn">Update with Random Quote</button>
                        <button id="deleteBtn-<%=i%>"class="delete-quote btn">Delete</button>
                    </div>
                </li>
            <%} %>
        </ul>
    </section>

    <!-- <section class="update-section">
        <h2>Replace quote with random quotation</h2>
        <button id="random-quote-update">Motivate!</button>
    </section> -->

    <script rel="text/javascript" src= "main.js"></script>
</body>
</html>